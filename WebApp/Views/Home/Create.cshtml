@model WebApp.ViewModels.KontaktCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Kontakt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kontakt.Imie" class="control-label"></label>
                <input asp-for="Kontakt.Imie" class="form-control" />
                <span asp-validation-for="Kontakt.Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Nazwisko" class="control-label"></label>
                <input asp-for="Kontakt.Nazwisko" class="form-control" />
                <span asp-validation-for="Kontakt.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Email" class="control-label"></label>
                <input asp-for="Kontakt.Email" class="form-control" />
                <span asp-validation-for="Kontakt.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Haslo" class="control-label"></label>
                <input asp-for="Kontakt.Haslo" class="form-control" />
                <span asp-validation-for="Kontakt.Haslo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Kategoria" class="control-label"></label>
                <select asp-for="Kontakt.Kategoria" class="form-control">

                    @foreach (var kategoria in Model.WszystkieKategorie)
                    {
                        <option value="@kategoria.Nazwa">@kategoria.Nazwa</option>
                    }
                </select>
                <span asp-validation-for="Kontakt.Kategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.Telefon" class="control-label"></label>
                <input type="number" name="Kontakt.Telefon" class="form-control" placeholder=""/>
                <span asp-validation-for="Kontakt.Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kontakt.DataUrodzenia" class="control-label"></label>
                <input asp-for="Kontakt.DataUrodzenia" class="form-control" type="date" />
                <span asp-validation-for="Kontakt.DataUrodzenia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
